@{
    ViewBag.Title = "Home Page";
    @model IList<projectLibrary.Models.Apartman>

    string cltr = null;
    if (HttpContext.Current.Request.Cookies["culturecookie"] == null)
    {
        cltr = new System.Globalization.CultureInfo("en-US").ToString();
    }
    else
    {
        cltr = HttpContext.Current.Request.Cookies["culturecookie"].Value;
    }
    System.Globalization.CultureInfo enCulture = new System.Globalization.CultureInfo("en-US");

    if (cltr == "EN")
    {
        System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("en-US");

    }
    else
    {
        System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("hr-HR");
    }


}

<div class="container" style="margin-top:70px">
    <div class="jumbotron">
        
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "sortForm" }))
        {
            projectLibrary.Models.Apartman a = new projectLibrary.Models.Apartman()
            {

            };

            Model.Add(a);

            //try?

            <div class="row">
                <label style="width:110px">
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {
                            <text>No. of rooms:</text>
                        }
                        else
                        {
                            <text>Broj soba:</text>
                        }

                    }
                </label>
                @Html.TextBoxFor(b => b[0].TotalRooms, new { @id = "inputTotalRooms", Value = "", @style = "width:50px" })
            </div>
            <div class="row">
                <label style="width:110px">
                    @{

                        if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {
                            <text>Adults:</text>
                        }
                        else
                        {
                            <text>Odraslih:</text>
                        }
                                }
                            </label>
                @Html.TextBoxFor(b => b[0].MaxAdults, new { @id = "inputMaxAdults", Value = "", @style = "width:50px" })
            </div>
            <div class="row">
                <label style="width:110px">
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {
                            <text>Children:</text>
                        }
                        else
                        {
                            <text>Djece:</text>
                        }

                                }
                            </label>
                @Html.TextBoxFor(b => b[0].MaxChildren, new { @id = "inputMaxChildren", Value = "", @style = "width:50px" })
            </div>
            <br />

            <div class="row">
                <label for="cars">
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {
                            <text>Sort by price:</text>
                        }
                        else
                        {
                            <text>Sortiraj po cijeni:</text>
                        }

                    }
                </label>
                @{ 
                    string odaberi;
                    if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                    {
                        odaberi = "sort by";
                    }
                    else
                    {
                        odaberi="odaberi";
                    }
                }
                @Html.DropDownListFor(m => m[0].DropDownEnum,
new SelectList(Enum.GetValues(typeof(projectLibrary.Models.DropDownEnum))),
"-- "+odaberi+" --", new { @id = "ddlEnum", @class = "form-control", @style = "width:164px" })
            </div>

            Model.RemoveAt(Model.Count - 1);
            <br />
            <div class="row">
                <input type="submit" style="width:164px; height:30px" value="@{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {
                            <text>Apply</text>
                        }
                        else
                        {
                            <text>Primijeni</text>
                        }

                    }" class="btn btn-primary">

            </div>

        }
    </div>



    <div class="row " + id="aptPanel">
        @{
            List<projectLibrary.Models.Apartman> sorted = new List<projectLibrary.Models.Apartman>();

            HttpCookie c = HttpContext.Current.Response.Cookies["UPSorting"];

        }

        @foreach (var item in Model)
        {
            // sort apts if ddlitem.selected here
            sorted.Add(item);



        }

        @{
            if (c.Value == "Uzlazno")
            {
                sorted.Sort((a, b) => a.Price.CompareTo(b.Price));
            }
            else if (c.Value == "Silazno")
            {
                sorted.Sort((a, b) => b.Price.CompareTo(a.Price));
            }


        }



        @foreach (var item in sorted)
        {
            if (item.StatusId == 3)
            {




                <div class="col-md-2">
                    <div class="box-shadow panel panel-default mb-5" style="width: 18rem;">
                        <div class="panel-body">

                            
                            <div style="overflow:hidden; height:fit-content">
                                <img class="panel-img-top" style=" transition: all .2s ease-in-out; height:250px;" alt="No image available" src="..\..\@item.HelperPicturePath">
                            </div>
                            <div class="panel-body">
                                <h5 class=" text-secondary panel-title">@item.Name</h5>
                                <p class="text-secondary panel-text">@item.TotalRooms</p>@{
                                    string dan;
                                    if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                                    {
                                        dan = "day";
                                    }
                                    else
                                    {
                                        dan = "dan";
                                    }
                                }
                                @Html.ActionLink("HRK " + @item.Price + "/" + dan, "Details", "Home", new { @id = item.Id }, new { @class = "panel-text btn btn-warning" })



                            </div>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
    
</div>








@section scripts{
    
    <script>



        $(document).ready(function () {


        });

        $("#sortForm").submit(function (e) {
            e.preventDefault();
            document.getElementById("aptPanel").innerHTML = '';
            document.getElementById("aptPanel").insertAdjacentHTML("beforeend", '<div style="font-weight:bold" class="text-primary">Loading...</div>');

            var $form = $(this);
            var term = $form.find("fname").val();
            var url = $form.attr("action");

            //create helper JS object with 4 attributes to display, pass to controller
            var apt = {
                TotalRooms: $("#inputTotalRooms").val(),
                MaxAdults: $("#inputMaxAdults").val(),
                MaxChildren: $("#inputMaxChildren").val(),
                DropDownEnum: $("#ddlEnum").val(),
            }


            console.log("ockej");
            $.ajax({
                type: "post",
                url: url,
                datatype: "json",
                data: apt,
                success: function (response) {
                    //JS sort array and DOM manipulation

                    const getCookieValue = (name) => (
                        document.cookie.match('(^|;)\\s*' + name + '\\s*=\\s*([^;]+)')?.pop() || ''
                    )
                    var sortStr = getCookieValue("UPSorting");


                    var apts = response;

                    if (sortStr == "Uzlazno") {
                        apts.sort((firstItem, secondItem) => firstItem.Price - secondItem.Price);
                        console.log("ušlo");

                    } else if (sortStr == "Silazno") {
                        apts.sort((firstItem, secondItem) => secondItem.Price - firstItem.Price);
                        console.log("ušlo");
                    }

                    if (Object.keys(apts).length === 0) {
                        document.getElementById("aptPanel").innerHTML = '';
                        document.getElementById("aptPanel").insertAdjacentHTML("beforeend", '<h3>@{if (System.Threading.Thread.CurrentThread.CurrentCulture.ToString() == enCulture.ToString())
                        {<text>No apartments match this filter</text>}
                        else
                        {<text>Nema podataka za prikaz</text>}}</h3>');

                    }

                    for (var i = 0; i < apts.length; i++) {
                        var aptPanel = document.getElementById("aptPanel");
                        if (i == 0) {
                            aptPanel.innerHTML = '';
                        }



                        if (apts[i].StatusId == 3) {


                            aptPanel.insertAdjacentHTML("beforeend", '<div class="col-md-2"><div class="box-shadow panel panel-default mb-5" style="width: 18rem;"><div class="panel-body"><a style="text-decoration:none" href="\\Home\\Details\\' + apts[i].Id + '"><div style="overflow:hidden; height:fit-content"><img class="panel-img-top" style=" transition: all .2s ease-in-out; height:250px;" src="..\\..\\' + apts[i].HelperPicturePath + '"></div ><div class="panel-body"><h5 class=" text-secondary panel-title">' + apts[i].Name + '</h5><p class="text-secondary panel-text">' + apts[i].TotalRooms + '</p><p class="panel-text btn btn-warning">HRK ' + apts[i].Price + '/dan</p></div></a></div ></div ></div > ')

                        }
                    }

                }
            });
        });










    </script>

}

